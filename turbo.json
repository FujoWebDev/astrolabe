{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env.*local", ".env", "tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "storybook": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "publish:minor": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "build-storybook": {
      "inputs": ["storybook/**/*.tsx", "storybook/**/*.ts"],
      "dependsOn": ["^build"],
      "env": ["NODE_OPTIONS"],
      "outputs": ["storybook/storybook-static/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
